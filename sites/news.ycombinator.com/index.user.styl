/* ==UserStyle==
@name           Readable Hacker News 
@version        1.0.0
@namespace      d.wolf.gdn
@preprocessor   stylus
@description    Makes Hacker News actually consumable.
@author         David Wolf <d@wolf.gdn> (https://d.wolf.gdn)
@updateURL      https://raw.githubusercontent.com/devidw/user-styles/master/sites/news.ycombinator.com/index.user.styl
@homepageURL    https://github.com/devidw/user-styles/tree/master/sites/news.ycombinator.com
@supportURL     https://github.com/devidw/user-styles/issues
@license        Unlicense
==/UserStyle== */

@-moz-document domain("news.ycombinator.com")
  body
    margin 0
    background darkgrey

  img[src*="y18.gif"]
  .yclinks
    display none

  td[bgcolor="#ff6600"]
    background-color transparent
    border-bottom 1px solid black
    padding-top .5rem
    padding-bottom .5rem
    text-transform capitalize

  td
  .pagetop
  .title
  .comment
  .comhead
  .subtext
    font-family ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji"
  
  .toptext
  .comment
    font-size 16px
    line-height 1.5

  .title
  .title a
    font-size 24px
    padding-bottom 1rem
    color black

  .fatitem td
    color black

  .subline
  .comhead
    border-color gray
    border-style solid
    border-width 1px 0 0 0
    padding .2rem 0 .25rem .35rem
    font-size 12px
    color gray

    a
      color #000a !important

  .votelinks
    background #0003

  #hnmain
    width 50vw
    background transparent